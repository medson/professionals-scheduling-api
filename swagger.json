{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "A Node.Js API",
    "description": "An application built using express and mongodb",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:3000",
  "basePath": "/api/v1",
  "tags": [
    {
      "name": "Professionals",
      "description": "API for compare prices of diferent tariff calls"
    }
  ],
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/professional": {
      "get": {
        "tags": ["Professional"],
        "description": "Get all professionals",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "List all professionals",
            "schema": {
              "in": "body",
              "$ref": "#/definitions/Professionals"
            }
          }
        }
      },
      "post": {
        "tags": ["Professional"],
        "description": "Create a new professional",
        "parameters": [
          {
            "name": "professional",
            "in": "body",
            "description": "Professional params to be created",
            "schema": {
              "$ref": "#/definitions/Professional"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": "New Professional created",
            "schema": {
              "in": "body",
              "$ref": "#/definitions/Professional"
            }
          },
          "400": {
            "description": "Bad request",
            "schema": {
              "in": "body",
              "$ref": "#/definitions/Error"
            }
          }
        }
      }
    },
    "/schedule":{
      "get":{
        "tags": ["Schedules"],
        "description": "Get Schedules",
        "responses":{
          "200":{
            "description":"List all schedules",
            "schema":{
              "in":"body",
              "$ref":"#/definitions/Schedule"
            }
          }
        }
      }
    },
    "/professional/{id}/schedule":{
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "ID of professional that we want to create a schedule",
          "type": "string"
        }
      ],
      "post":{
        "tags": ["Schedules"],
        "description": "Create Schedules",
        "parameters":[
            {
              "name":"Schedule",
              "in":"body",
              "description":"Schedule params to be created",
              "schema": {
                "$ref": "#/definitions/ScheduleCreate"
              }
            }
          ],
        "responses":{
          "201":{
            "description":"Created schedule",
            "schema":{
              "in":"body",
              "$ref":"#/definitions/Schedule"
            }
          },
          "400":{
            "description":"Already registered",
            "schema":{
              "in":"body",
              "$ref":"#/definitions/Error"
            }
          }
        }
      }
    },
    "/professional/{id}/schedule/{scheduleId}":{
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "ID of professional that we want to create a schedule",
          "type": "string"
        },
        {
          "name": "scheduleId",
          "in": "path",
          "required": true,
          "description": "ID of one schedule",
          "type": "string"
        }
      ],
      "put":{
        "tags": ["Schedules"],
        "description": "Update Schedules",
        "parameters":[
            {
              "name":"Schedule",
              "in":"body",
              "description":"Schedule params to be updated",
              "schema": {
                "$ref": "#/definitions/ScheduleCreate"
              }
            }
          ],
        "responses":{
          "200":{
            "description":"Updated schedule",
            "schema":{
              "in":"body",
              "$ref":"#/definitions/Success"
            }
          },
          "404":{
            "description":"not found",
            "schema":{
              "in":"body",
              "$ref":"#/definitions/Error"
            }
          }
        }
      },
      "delete":{
        "tags": ["Schedules"],
        "description": "Delete Schedules",
        "responses":{
          "200":{
            "description":"Success",
            "schema":{
              "in":"body",
              "$ref":"#/definitions/Success"
            }
          },
          "404":{
            "description":"not found",
            "schema":{
              "in":"body",
              "$ref":"#/definitions/Error"
            }
          }
        }
      }
    },
    "/appointment":{
      "post":{
        "tags": ["Appointments"],
        "description": "Create and Appointment",
        "parameters":[
            {
              "name":"Appointment",
              "in":"body",
              "schema":{
                "$ref":"#/definitions/CreateAppointment"
              }
            }
          ],
        "responses":{
          "200":{
            "description":"Appointment created",
            "schema":{
              "in":"body",
              "$ref":"#/definitions/Schedule"
            }
          },
          "400":{
            "description":"Bad request",
            "schema":{
              "in":"body",
              "$ref":"#/definitions/Error"
            }
          }
        },
          "404":{
            "description":"professional not found",
            "schema":{
              "in":"body",
              "$ref":"#/definitions/Error"
            }
          }
      },
      "get":{
        "parameters":[
          {
            "name": "from",
            "in": "query",
            "description": "initial range of time to get appointments",
            "type": "string"
          },
          {
            "name": "to",
            "in": "query",
            "description": "initial range of time to get appointments",
            "type": "string"
          }
        ],
        "tags": ["Appointments"],
        "responses":{
          "200":{
            "description":"Availability for selected range",
            "schema":{
              "in":"body",
              "$ref":"#/definitions/Schedules"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Professional": {
      "required": ["name", "email"],
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        }
      }
    },
    "Professionals": {
      "type": "array",
      "$ref": "#/definitions/Professional"
    },
    "Schedule": {
      "required": ["professional", "email"],
      "properties": {
        "monday": {
          "type": "array",
          "items":{
            "type":"string"
          }
        },
        "tuesday": {
          "type": "array",
          "items":{
            "type":"string"
          }
        },
        "wednesday": {
          "type": "array",
          "items":{
            "type":"string"
          }
        },
        "thursday": {
          "type": "array",
          "items":{
            "type":"string"
          }
        },
        "friday": {
          "type": "array",
          "items":{
            "type":"string"
          }
        },
        "professional": {
          "$ref": "#/definitions/Professional"
        },
        "apointments": {
          "type":"array",
          "$ref":"#/definitions/Appointment"
        }
      }
    },
    "Schedules": {
      "type": "array",
      "$ref": "#/definitions/Schedule"
    },
    "ScheduleCreate":{
      "properties": {
        "monday": {
          "type": "array",
          "items":{
            "type":"string"
          }
        },
        "tuesday": {
          "type": "array",
          "items":{
            "type":"string"
          }
        },
        "wednesday": {
          "type": "array",
          "items":{
            "type":"string"
          }
        },
        "thursday": {
          "type": "array",
          "items":{
            "type":"string"
          }
        },
        "friday": {
          "type": "array",
          "items":{
            "type":"string"
          }
        }
      }
    },
    "Appointment":{
      "properties" :{
        "slot":{
          "properties":{
            "start":{
              "type":"string"
            },
            "end":{
              "type":"string"
            }
          }
        },
        "date":{
          "type":"string"
        }
      }
    },
    "CreateAppointment": {
      "properties": {
        "professionalId":{
          "type": "string",
          "description": "Selected professional ID to do an appointment",
          "required":true
        },
        "date":{
          "type": "string",
          "description": "YYYY-MM-DD",
          "required":true
        },
        "time":{
          "type": "string",
          "description": "HH:mm",
          "required":true
        }
      }
    },
    "Error": {
      "properties": {
        "error": {
          "message": {
            "type": "string",
            "description": "A message with the respective error"
          }
        }
      }
    },
    "Success": {
      "properties": {
        "type": "string",
        "description": "A message of success"
      }
    }
  }
}
